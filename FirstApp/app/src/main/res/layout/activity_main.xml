<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:alpha="0.6"
        android:fontFamily="cursive"

        android:scaleY="2.3"
        android:text="2016184023  성우혁"
        android:textAlignment="center"
        android:textColor="#4CAF50"

        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PushMeButton" />

    <Button
        android:id="@+id/PushMeButton"
        android:layout_width="131dp"
        android:layout_height="78dp"

        android:text="Push me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <Button
        android:id="@+id/HelloButton"
        android:layout_width="132dp"
        android:layout_height="76dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/sNumTextView"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PushMeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />


</androidx.constraintlayout.widget.ConstraintLayout>