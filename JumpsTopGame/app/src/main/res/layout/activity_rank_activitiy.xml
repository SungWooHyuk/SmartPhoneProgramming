<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/square"
    tools:context=".app.TitleActivity">

    <LinearLayout
        android:id="@+id/treeParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/title_round_bg"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/flyHealthFg"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/scoreTextView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onBtnStart"
            android:text="Go Title"
            android:textAlignment="center"
            android:textColor="@color/flyHealthFg"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quit"
            android:textColor="@color/flyHealthFg"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>
